<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="@dimen/dimen5dp"/>
            <stroke android:width="@dimen/dimen3dp" android:color="@color/gray_dark"/>
            <gradient android:startColor="@color/colorGradientStart" android:endColor="@color/colorGradientEnd" android:angle="270" android:centerColor="@color/colorGradientCenter"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/dimen5dp"/>
            <stroke android:width="@dimen/dimen3dp" android:color="#404040"/>
            <gradient android:startColor="#30000000" android:endColor="#50000000" android:angle="270" android:centerColor="#40000000"/>
        </shape>
    </item>
</selector>
